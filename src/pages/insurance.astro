---
import { fetchGeneralData ,fetchInsuranceData , fetchHomeData } from '../utils/dataMapping.ts';
import MainLayout from "../layouts/MainLayout.astro"

const GeneralData = await fetchGeneralData();
// const Data = { heading: "Blog", text: "Providing personalized care for substance use and mental health to help individuals achieve lasting recovery."}

import HeroProgram from "../components/sections/HeroProgram.astro";
import Insurancehero from '../components/sections/Insurancehero.astro';
import ContactHero from '../components/sections/ContactHero.astro';
import Insurance2 from '../components/sections/Insurance2.astro';
import Testimonials from '../components/sections/Testimonials.astro';
import TreatmentGrid from '../components/sections/TreatmentGrid.astro';

const {data:InsuranceData} = await fetchInsuranceData();
const { data: HomeData } = await fetchHomeData();
---

<MainLayout title="About" description="Alcohol and Drug Rehab in Boca Raton, Florida">
    <HeroProgram Content={InsuranceData?.hero} GeneralData={GeneralData} LinkData={HomeData?.hero?.heroLinks} />
    <ContactHero isInsurancePage={true} insuranceData={InsuranceData?.contactHero} />
    <Insurance2 insuranceData={InsuranceData?.insuranceProviders} />
    <Testimonials Content={HomeData?.testimonials} />
    <TreatmentGrid Content={InsuranceData?.treatmentGrid}  />
    <Insurancehero Content={InsuranceData?.insuranceVerification} />
    
</MainLayout>