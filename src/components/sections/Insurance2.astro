---
import { Image } from 'astro:assets';
const { insuranceData } = Astro.props;
---

    <section class="flex overflow-hidden flex-col px-16 pt-16 pb-9 bg-white max-w-7xl mx-auto max-md:px-5">
        <header class="flex flex-wrap lg:flex-nowrap gap-6 justify-between items-center max-md:max-w-full">
            <Image
                src="/imgs/insurance/insurance.png"
                alt="Insurance coverage illustration"
                class="object-contain self-stretch my-auto rounded-3xl aspect-[1.57] min-w-60 w-[706px] max-md:max-w-full"
                width={706}
                height={450}
            />
            <div class="self-stretch my-auto min-w-60 w-[552px] max-md:max-w-full">
                <div class="w-full max-w-[566px] max-md:max-w-full">
                    <h1 class="text-5xl font-medium leading-[72px] text-neutral-800 max-md:max-w-full max-md:text-4xl max-md:leading-[64px]">
                        Insurance
                        <span style="color: rgba(94, 129, 233, 1)">Companies We Work</span>
                        With
                    </h1>
                    <p class="mt-8 text-lg leading-9 text-neutral-800 max-md:max-w-full">
                        {insuranceData.subheading}
                    </p>
                    <div class="flex flex-wrap gap-3 mt-8 w-full">
                        <a href={insuranceData.buttonLink} class="flex flex-col flex-1 shrink justify-center items-center px-5 py-4 text-lg font-semibold leading-none bg-amber-300 basis-0 min-w-60 rounded-[50px] text-neutral-800">
                            <span>{insuranceData.buttonText}</span>
                        </a>
                        <a href={`tel:${insuranceData.phoneNumber}`} class="flex flex-col flex-1 shrink justify-center items-center px-5 py-4 my-auto text-white bg-purple-900 basis-0 min-w-60 rounded-[50px]">
                            <div class="flex flex-col items-center">
                                <span class="text-xs">{insuranceData.callText}</span>
                                <span class="text-xs font-semibold leading-6">{insuranceData.callTextTwo}</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <main>
            <div class="flex flex-wrap gap-6 mt-12 w-full max-md:mt-10 max-md:max-w-full">
                {insuranceData.providers.slice(0, 4).map((provider) => (
                    <article class="flex flex-1 shrink gap-2.5 items-start p-6 h-full bg-white rounded-3xl basis-0 min-w-60 shadow-[0px_10px_40px_rgba(0,0,0,0.05)] max-md:px-5">
                        <div class="flex-1 shrink w-full basis-0 min-w-60">
                            <header class="w-full">
                                <div class="flex overflow-hidden flex-col items-start w-full rounded-[100px] max-md:pr-5">
                                    <Image
                                        src={provider.logo}
                                        alt={`${provider.name} logo`}
                                        class="object-contain w-10 aspect-square"
                                        width={40}
                                        height={40}
                                    />
                                </div>
                                <h3 class="mt-4 text-base font-bold text-neutral-800">
                                    {provider.name}
                                </h3>
                            </header>
                            <p class="mt-4 text-base leading-6 text-neutral-800">
                                {provider.description}
                            </p>
                        </div>
                    </article>
                ))}
            </div>

            <div class="flex flex-wrap gap-6 mt-6 w-full max-md:max-w-full">
                {insuranceData.providers.slice(4).map((provider) => (
                    <article class="flex flex-1 shrink gap-2.5 items-start p-6 h-full bg-white rounded-3xl basis-0 min-w-60 shadow-[0px_10px_40px_rgba(0,0,0,0.05)] max-md:px-5">
                        <div class="flex-1 shrink w-full basis-0 min-w-60">
                            <header class="w-full">
                                <div class="flex overflow-hidden flex-col items-start w-full rounded-[100px] max-md:pr-5">
                                    <Image
                                        src={provider.logo}
                                        alt={`${provider.name} logo`}
                                        class="object-contain w-10 aspect-square"
                                        width={40}
                                        height={40}
                                    />
                                </div>
                                <h3 class="mt-4 text-base font-bold text-neutral-800">
                                    {provider.name}
                                </h3>
                            </header>
                            <p class="mt-4 text-base leading-6 text-neutral-800">
                                {provider.description}
                            </p>
                        </div>
                    </article>
                ))}
            </div>
        </main>

        <footer class="flex flex-col self-center mt-16 max-w-full w-[648px] max-md:mt-10">
            <p class="text-lg leading-9 text-center text-neutral-800 max-md:max-w-full">
                {insuranceData.footerText}
            </p>
            <a href={insuranceData.verifyButtonLink} class="flex flex-col justify-center items-center self-center px-5 py-3.5 mt-6 max-w-full text-base font-semibold text-white bg-indigo-500 min-h-[52px] rounded-[50px] w-[270px]">
                <span>{insuranceData.verifyButtonText}</span>
            </a>
        </footer>
    </section>
</body>
</html>
