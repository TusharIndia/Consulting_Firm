---
import Button from "../Button.astro"

const {heading, buttonText, buttonUrl, cards } = Astro.props.Content;
---


<section class="bg-[#6D6D6D] section">
    <div class="container">
        <div class="flex flex-row justify-between items-center mb-6">
            <h2 class="text-white font-medium">{heading}</h2>
            <Button
                buttonText={buttonText}
                buttonLink={buttonUrl}
                buttonClass="transparent-button"
            />
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

            {cards.map((cards) => (
                <div class="program__treatment-card flex flex-col gap-6">
                <img
                    src={cards.image}
                    alt=""
                    class="rounded-xl object-cover aspect-square"
                />
                <h3 class="text-3xl text-white font-normal leading-relaxed">
                   {cards.title}
                </h3>
                <a href="#" class="tex-black font-bold text-base"
                    >{cards.buttonText}</a
                >
            </div>
              ))}




            

        </div>
    </div>
</section>