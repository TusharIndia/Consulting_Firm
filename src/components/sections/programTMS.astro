<section class="overflow-hidden justify-center px-16 py-11 bg-white max-md:px-5">
  <div class="flex gap-5 max-md:flex-col">
    <article class="w-[46%] max-md:ml-0 max-md:w-full">
      <div class="w-full max-md:mt-10 max-md:max-w-full">
        <h1 class="text-5xl font-medium leading-[72px] text-neutral-800 max-md:max-w-full max-md:text-4xl max-md:leading-[64px]">
          {Astro.props.Content.mainHeading}
          <span class="text-[#5E81E9]">{Astro.props.Content.coloredHeading}</span>
        </h1>

        <p class="mt-8 text-lg leading-9 text-neutral-800 max-md:max-w-full">
          {Astro.props.Content.description}
        </p>

        <div class="flex flex-wrap gap-3 mt-8 max-w-full w-[552px]">
          <button class="flex flex-col flex-1 shrink justify-center items-center px-5 py-4 text-lg font-semibold leading-none bg-amber-300 basis-0 min-w-60 rounded-[50px] text-neutral-800">
            {Astro.props.Content.primaryButtonText}
          </button>

          <button class="flex flex-col flex-1 shrink justify-center items-center px-5 py-4 my-auto text-white bg-purple-900 basis-0 min-w-60 rounded-[50px]">
            <span class="text-xs">{Astro.props.Content.phoneQuestion}</span>
            <span class="text-xs font-semibold leading-6">{Astro.props.Content.phoneNumber}</span>
          </button>
        </div>
      </div>
    </article>

    <figure class="ml-5 w-[54%] max-md:ml-0 max-md:w-full">
      <img
        src={Astro.props.Content.image}
        alt={Astro.props.Content.imageAlt}
        class="object-contain grow w-full rounded-3xl aspect-[1.35] max-md:mt-10 max-md:max-w-full"
      />
    </figure>
  </div>
</section>


<div class="flex justify-center items-center px-16 py-9 mx-auto w-full max-w-none bg-white max-md:px-10 max-md:py-6 max-md:max-w-[991px] max-sm:px-5 max-sm:py-4 max-sm:max-w-screen-sm">
  <section class="flex flex-col shrink-0 gap-6 items-start w-[1320px] max-md:w-full max-md:max-w-[1320px]">
    {Astro.props.Content.conditions.map((row, rowIndex) => (
      <div class="flex gap-6 items-center self-stretch max-md:flex-col max-md:gap-4 max-sm:gap-3">
        {row.map((condition) => (
          <article class="flex flex-col gap-4 items-start flex-[1_0_0] max-md:w-full max-sm:gap-3">
            <div class="flex justify-between items-center self-stretch max-sm:gap-2">
              <div class="flex gap-3 items-center max-md:w-full max-sm:gap-2">
                <div class="shrink-0 w-10 h-10 max-sm:w-8 max-sm:h-8">
                  <img src={condition.icon} alt={`${condition.title} Icon`} class="icon" style="width: 40px; height: 40px; flex-shrink: 0">
                </div>
                <h2 class="text-2xl leading-10 text-neutral-800 max-md:text-xl max-md:leading-8 max-sm:text-lg max-sm:leading-7">
                  {condition.title}
                </h2>
              </div>
              <button aria-label={`Expand ${condition.title} section`}>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="arrow-icon" style="width: 24px; height: 24px">
                  <path d="M2.47863 7.88312L3.89788 6.46387L12.1324 14.6984L20.3669 6.46387L21.7861 7.88312L12.1324 17.5369L2.47863 7.88312Z" fill="#222222"></path>
                </svg>
              </button>
            </div>
            <hr class="self-stretch h-px border-b border-solid border-b-neutral-800">
          </article>
        ))}
      </div>
    ))}
  </section>
</div>
