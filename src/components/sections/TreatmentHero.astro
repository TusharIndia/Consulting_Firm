---
// TreatmentHero component
interface Props {
    Content: {
        heading: string;
        tagline: string;
        title: string;
        subtitle: string;
        description: string;
        approaches: {
            id: string;
            title: string;
            description: string;
        }[];
    };
}

const { Content } = Astro.props;
---

<section class="flex gap-11 items-start px-16 py-14 mx-auto w-full bg-white max-w-[1440px] max-lg:px-12 max-md:flex-col max-md:gap-10 max-md:p-10 max-md:max-w-[991px] max-sm:gap-8 max-sm:p-5 max-sm:max-w-screen-sm">
    <div class="relative shrink-0 h-[586px] w-[654px] max-lg:w-[45%] max-lg:h-auto max-md:w-full max-md:h-[500px] max-sm:h-[450px]">
        <div class="hero-background-container w-full h-full">
            <svg
                width="100%"
                height="100%"
                viewBox="0 0 654 586"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                class="hero-background w-full h-full"
                style="border-radius: 24px;"
                preserveAspectRatio="xMidYMid meet"
            >
                <defs>
                    <linearGradient
                        id="paint0_linear_469_322"
                        x1="654"
                        y1="293"
                        x2="0"
                        y2="293"
                        gradientUnits="userSpaceOnUse"
                    >
                        <stop stop-color="#F6F2EE"></stop>
                        <stop offset="1" stop-color="#F3EFEC"></stop>
                    </linearGradient>
                    <clipPath id="clip0_469_322">
                        <rect width="654" height="586" rx="24" fill="white"></rect>
                    </clipPath>
                </defs>
                <g clip-path="url(#clip0_469_322)">
                    <rect
                        width="654"
                        height="586"
                        rx="24"
                        fill="url(#paint0_linear_469_322)"
                    ></rect>
                    <path
                        d="M-29 228.859C4 197.859 105.5 142.859 167 172.859C225.389 201.342 318.785 211.351 362.533 165.973C391.024 136.422 361.543 86.6347 320.893 92.3408C283.379 97.6068 249.542 128.81 253.5 219.359C259.9 365.759 1031.5 287.526 1354.5 280.859"
                        stroke="white"
                        stroke-opacity="0.46"
                        stroke-width="44"
                    ></path>
                    <rect
                        x="80"
                        y="79.5"
                        width="185"
                        height="34"
                        rx="17"
                        fill="#543783"
                        class="max-sm:transform max-sm:scale-90 max-sm:translate-x-[-5%]"
                    ></rect>
                    <text
                        fill="white"
                        xml:space="preserve"
                        style="white-space: pre"
                        font-family="Inter"
                        font-size="16"
                        letter-spacing="0em"
                        class="max-sm:text-[14px]"
                    >
                        <tspan x="120" y="102.318">{Content.heading}</tspan>
                    </text>
                    <text
                        fill="#222222"
                        xml:space="preserve"
                        style="white-space: pre"
                        font-family="Poppins"
                        font-size="50"
                        font-weight="500"
                        letter-spacing="0em"
                        class="max-md:text-[40px] max-sm:text-[32px]"
                    >
                        <tspan x="80" y="356" class="max-md:transform max-md:translate-y-[-30px]">{Content.tagline}</tspan>
                        <tspan x="80" y="428" class="max-md:transform max-md:translate-y-[-30px]">{Content.title}</tspan>
                    </text>
                    <text
                        opacity="0.75"
                        fill="#222222"
                        xml:space="preserve"
                        style="white-space: pre"
                        font-family="Inter"
                        font-size="18"
                        letter-spacing="0em"
                        class="max-md:text-[16px] max-sm:text-[14px]"
                    >
                        <tspan x="80" y="493.545" class="max-md:transform max-md:translate-y-[-30px]">{Content.subtitle}</tspan>
                        <tspan x="80" y="527.545" class="max-md:transform max-md:translate-y-[-30px]">{Content.description}</tspan>
                    </text>
                </g>
            </svg>
        </div>
    </div>

    <div class="flex flex-col gap-10 pt-12 w-[626px] max-lg:w-[50%] max-lg:pt-8 max-md:w-full max-md:pt-4 max-sm:gap-8">
        {Content.approaches.map((approach) => (
            <article class="flex flex-col gap-6 max-sm:gap-4">
                <header class="flex gap-3 items-center max-sm:flex-col max-sm:gap-4 max-sm:items-start">
                    <div class="treatment-icon-container">
                        <svg
                            width="56"
                            height="56"
                            viewBox="0 0 56 56"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                            class="treatment-icon max-sm:w-[48px] max-sm:h-[48px]"
                            style="flex-shrink: 0"
                        >
                            <defs>
                                <clipPath id={`clip0_469_${333 + parseInt(approach.id) * 8}`}>
                                    <rect width="56" height="56" fill="white"></rect>
                                </clipPath>
                            </defs>
                            <g clip-path={`url(#clip0_469_${333 + parseInt(approach.id) * 8})`}>
                                <path
                                    d="M56 28C56 12.536 43.464 0 28 0C12.536 0 0 12.536 0 28C0 43.464 12.536 56 28 56C43.464 56 56 43.464 56 28Z"
                                    fill="#222222"
                                ></path>
                                <text
                                    fill="white"
                                    xml:space="preserve"
                                    style="white-space: pre"
                                    font-family="Inter"
                                    font-size="22.4"
                                    font-weight="bold"
                                    letter-spacing="0em"
                                >
                                    <tspan x="15.7098" y="36.1457">{approach.id}</tspan>
                                </text>
                            </g>
                        </svg>
                    </div>
                    <h2 class="text-3xl font-bold leading-10 text-neutral-800 max-lg:text-2xl max-lg:leading-8 max-md:text-2xl max-md:leading-8 max-sm:text-xl max-sm:leading-7 font-poppins">
                        {approach.title}
                    </h2>
                </header>
                <p class="text-base leading-6 text-neutral-800 max-md:text-sm max-md:leading-5 font-inter">
                    {approach.description}
                </p>
            </article>
        ))}
    </div>
</section>

<style>
    /* Font styles */
    .font-inter { font-family: 'Inter', sans-serif; }
    .font-poppins { font-family: 'Poppins', sans-serif; }
    
    /* Additional responsive styles */
    @media (max-width: 820px) and (min-width: 768px) {
        .hero-background-container svg text[font-size="50"] {
            font-size: 42px;
        }
        
        .hero-background-container svg text[font-size="18"] {
            font-size: 16px;
        }
    }
    
    /* Ensure the SVG is fully responsive */
    .hero-background-container {
        width: 100%;
        height: 100%;
        display: block;
    }
    
    .hero-background {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
