---
import Form from "../Form.astro";


const { heading, description} = Astro.props.Content;

---


<section class="section bg-base-50">
    <div class="container program-hero__container items-center !gap-20">
        <div class="flex-none space-y-5 px-4 md:px-0 gap-5">
            <h1 class="!font-normal !leading-tight">{heading}</h1>
            <p>
                {description}
            </p>
            <div
                class="items-center gap-x-3 space-y-3 sm:flex sm:space-y-0"
            >
            </div>
        </div>
        <div class="flex-none mt-14 md:mt-0 bg-white p-10 rounded-xl">
            <!-- Form  -->
            <Form />
        </div>
    </div>
</section>