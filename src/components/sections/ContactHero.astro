<main class="flex gap-16 justify-center items-start px-16 py-14 mx-auto my-0 max-w-none bg-white w-full max-md:flex-col max-md:gap-10 max-md:px-8 max-md:py-10 max-md:w-full max-md:max-w-[991px] max-sm:gap-8 max-sm:px-4 max-sm:py-6 max-sm:max-w-screen-sm">
  <section class="flex flex-col gap-8 items-start w-[45%] max-md:w-full">
    <header class="flex flex-col gap-4 items-start self-stretch">
      <h1 class="text-5xl font-medium leading-[60px] text-neutral-800 max-md:text-4xl max-md:leading-[56px] max-sm:text-3xl max-sm:leading-10">
        Emergency Contact
      </h1>
      <p class="self-stretch text-lg leading-7 opacity-75 text-neutral-800 max-sm:text-base max-sm:leading-6">
        For mental health emergencies, please call 911 or visit your nearest emergency room.
      </p>
    </header>

    <article class="flex gap-2.5 items-start self-stretch p-6 bg-white rounded-xl shadow-lg max-sm:p-5">
      <div class="flex flex-col gap-4 items-start flex-[1_0_0]">
        <h2 class="self-stretch text-xl font-bold text-neutral-800 max-sm:text-lg">
          General Support
        </h2>
        <div class="flex flex-col gap-3 items-start self-stretch">
          <div class="flex gap-2 items-center self-stretch">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 20C3.45 20 2.97917 19.8042 2.5875 19.4125C2.19583 19.0208 2 18.55 2 18V6C2 5.45 2.19583 4.97917 2.5875 4.5875C2.97917 4.19583 3.45 4 4 4H20C20.55 4 21.0208 4.19583 21.4125 4.5875C21.8042 4.97917 22 5.45 22 6V18C22 18.55 21.8042 19.0208 21.4125 19.4125C21.0208 19.8042 20.55 20 20 20H4ZM12 12.825C12.0833 12.825 12.1708 12.8125 12.2625 12.7875C12.3542 12.7625 12.4417 12.725 12.525 12.675L19.6 8.25C19.7333 8.16667 19.8333 8.0625 19.9 7.9375C19.9667 7.8125 20 7.675 20 7.525C20 7.19167 19.8583 6.94167 19.575 6.775C19.2917 6.60833 19 6.61667 18.7 6.8L12 11L5.3 6.8C5 6.61667 4.70833 6.6125 4.425 6.7875C4.14167 6.9625 4 7.20833 4 7.525C4 7.69167 4.03333 7.8375 4.1 7.9625C4.16667 8.0875 4.26667 8.18333 4.4 8.25L11.475 12.675C11.5583 12.725 11.6458 12.7625 11.7375 12.7875C11.8292 12.8125 11.9167 12.825 12 12.825Z" fill="#543783"/>
            </svg>
            <p class="text-base leading-6 text-neutral-800 max-sm:text-sm max-sm:leading-5">
              Email: support@clearpath.com
            </p>
          </div>
          <div class="flex gap-2 items-center self-stretch">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19.95 21C17.8667 21 15.8083 20.5458 13.775 19.6375C11.7417 18.7292 9.89167 17.4417 8.225 15.775C6.55833 14.1083 5.27083 12.2583 4.3625 10.225C3.45417 8.19167 3 6.13333 3 4.05C3 3.75 3.1 3.5 3.3 3.3C3.5 3.1 3.75 3 4.05 3H8.1C8.33333 3 8.54167 3.07917 8.725 3.2375C8.90833 3.39583 9.01667 3.58333 9.05 3.8L9.7 7.3C9.73333 7.56667 9.725 7.79167 9.675 7.975C9.625 8.15833 9.53333 8.31667 9.4 8.45L6.975 10.9C7.30833 11.5167 7.70417 12.1125 8.1625 12.6875C8.62083 13.2625 9.125 13.8167 9.675 14.35C10.1917 14.8667 10.7333 15.3458 11.3 15.7875C11.8667 16.2292 12.4667 16.6333 13.1 17L15.45 14.65C15.6 14.5 15.7958 14.3875 16.0375 14.3125C16.2792 14.2375 16.5167 14.2167 16.75 14.25L20.2 14.95C20.4333 15.0167 20.625 15.1375 20.775 15.3125C20.925 15.4875 21 15.6833 21 15.9V19.95C21 20.25 20.9 20.5 20.7 20.7C20.5 20.9 20.25 21 19.95 21Z" fill="#543783"/>
            </svg>
            <p class="text-base leading-6 text-neutral-800 max-sm:text-sm max-sm:leading-5">
              Phone: (800) XXX-XXXX
            </p>
          </div>
        </div>
      </div>
    </article>

    <article class="flex flex-col gap-3 items-start self-stretch">
      <h2 class="self-stretch text-xl font-bold text-neutral-800 max-sm:text-lg">
        Business Hours
      </h2>
      <div class="flex flex-col gap-3 items-start self-stretch">
        <p class="text-base leading-6 text-neutral-800 max-sm:text-sm max-sm:leading-5">
          Monday - Friday: 9:00 AM - 5:00 PM
        </p>
        <p class="text-base leading-6 text-neutral-800 max-sm:text-sm max-sm:leading-5">
          Saturday - Sunday: Closed
        </p>
      </div>
    </article>
  </section>

  <section class="flex shrink-0 w-[45%] max-md:w-full">
    <div class="relative shrink-0 rounded-xl bg-gray-50 p-6 w-full">
      <form class="flex flex-col gap-6 items-start w-full">
        <div class="flex items-start w-full">
          <h2 class="inline-block px-4 py-1 text-sm font-medium text-white bg-purple-900 rounded-full">
            Send Us a Message
          </h2>
        </div>

        <div class="flex flex-col gap-4 items-start self-stretch w-full">
          <div class="flex flex-col gap-1 items-start self-stretch w-full">
            <label class="flex items-center text-xs text-neutral-600">
              Full Name<span class="text-xs text-red-600 ml-1">*</span>
            </label>
            <input type="text"
                  placeholder="Enter the full name"
                  required
                  class="w-full p-3 text-sm border border-gray-300 rounded-lg bg-white"
                  aria-required="true"/>
          </div>

          <div class="flex flex-col gap-1 items-start self-stretch w-full">
            <label class="flex items-center text-xs text-neutral-600">
              Email Address<span class="text-xs text-red-600 ml-1">*</span>
            </label>
            <input type="email"
                  placeholder="Enter the email address"
                  required
                  class="w-full p-3 text-sm border border-gray-300 rounded-lg bg-white"
                  aria-required="true"/>
          </div>

          <div class="flex flex-col gap-1 items-start self-stretch w-full">
            <label class="flex items-center text-xs text-neutral-600">
              Phone<span class="text-xs text-red-600 ml-1">*</span>
            </label>
            <input type="tel"
                  placeholder="Enter your phone number"
                  required
                  class="w-full p-3 text-sm border border-gray-300 rounded-lg bg-white"
                  aria-required="true"/>
          </div>

          <div class="flex flex-col gap-1 items-start self-stretch w-full">
            <label class="text-xs text-neutral-600" for="subject">Subject</label>
            <div class="relative self-stretch w-full">
              <select id="subject"
                    class="w-full p-3 text-sm border border-gray-300 rounded-lg bg-white appearance-none">
                <option value="" disabled selected>Select a subject</option>
              </select>
              <svg class="absolute right-3 top-1/2 transform -translate-y-1/2 pointer-events-none" width="14" height="7" viewBox="0 0 14 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7 7L0 0L14 0L7 7Z" fill="#666666"/>
              </svg>
            </div>
          </div>

          <div class="flex flex-col gap-1 items-start self-stretch w-full">
            <label class="text-xs text-neutral-600" for="message">Message</label>
            <textarea id="message"
                    placeholder="Write here..."
                    class="w-full h-24 p-3 text-sm border border-gray-300 rounded-lg bg-white resize-none"></textarea>
          </div>

          <button type="submit"
                class="w-full py-3 px-5 bg-blue-600 rounded-full text-white font-medium text-center transition-colors hover:bg-blue-700">
            Send
          </button>
        </div>
      </form>
    </div>
  </section>
</main>
