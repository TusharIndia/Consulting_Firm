---
import Button from "../Button.astro";
import Form from "../Form.astro";
import { Icon } from "astro-icon/components";
const GeneralData = Astro.props.GeneralData;
const { heading, logo, location } = Astro.props.Content;
---

<section class="mx-auto my-10 max-w-[1320px] max-md:my-10 max-md:rounded-3xl relative">
  <div class="rounded-none">
    <section class="flex flex-col px-20 pt-3 pb-20 w-full bg-purple-900 rounded-3xl max-md:px-5 max-md:max-w-full">
      <nav class="flex flex-wrap gap-10 justify-between items-center w-full text-base max-md:max-w-full">
        <img src="/imgs/hero_logo.png" alt="Company Logo" class="object-contain shrink-0 self-stretch my-auto aspect-[4.67] w-[159px]">

        <ul class="flex flex-wrap gap-10 items-center self-stretch my-auto text-white min-w-60 max-md:max-w-full">
          <li class="flex gap-1 items-center self-stretch my-auto whitespace-nowrap">
            <a href="#" class="self-stretch my-auto text-white">Treatments</a>
            <img src="/imgs/dropdown_arrow.svg" alt="Dropdown arrow" class="object-contain shrink-0 self-stretch my-auto w-4 aspect-square">
          </li>
          <li class="self-stretch my-auto"><a href="#" class="text-white">Locations</a></li>
          <li class="self-stretch my-auto"><a href="#" class="text-white">Pricing</a></li>
          <li class="self-stretch my-auto"><a href="#" class="text-white">Resources</a></li>
          <li class="self-stretch my-auto"><a href="#" class="text-white">Get Started</a></li>
        </ul>

        <a href="tel:1234567890" class="flex flex-col justify-center self-stretch px-5 py-2 my-auto text-blue-900 bg-white min-h-10 rounded-[50px]">
          <span class="gap-1 self-stretch">Call (123) 456-7890</span>
        </a>
      </nav>

      <section class="flex flex-col items-center self-center mt-20 max-w-full w-[566px] max-md:mt-10">
        <span class="px-9 py-1.5 w-40 max-w-full text-base text-blue-900 whitespace-nowrap bg-white rounded-[50px] max-md:px-5">
          Treatments
        </span>

        <h1 class="mt-3 text-4xl font-medium text-center text-white leading-[59px] max-md:max-w-full">
          Transformative Transcranial Magnetic Stimulation (TMS) at Clear Path
        </h1>

        <div class="flex flex-wrap gap-3 self-stretch mt-3 w-full max-md:max-w-full">
          <a href="#" class="flex flex-col flex-1 shrink justify-center items-center px-5 py-4 text-lg font-semibold leading-none bg-amber-300 basis-0 min-w-60 rounded-[50px] text-neutral-800">
            <span>Get Started</span>
          </a>

          <a href="tel:1234567890" class="flex flex-col flex-1 shrink justify-center items-center px-5 py-4 my-auto text-blue-900 bg-white basis-0 min-w-60 rounded-[50px]">
            <div class="flex flex-col items-center">
              <span class="text-xs">Have a question?</span>
              <span class="text-xs font-semibold leading-6">Call (123) 456-7890</span>
            </div>
          </a>
        </div>
      </section>
    </section>
  </div>
</section>