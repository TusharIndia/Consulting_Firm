---
import { Image } from 'astro:assets';
const { heading, headingTwo_Part_1, headingTwo_Part_2, image, imageAlt, steps } = Astro.props.Content;
---

<section class="mx-auto my-10 max-w-[1320px] max-md:my-10 max-md:rounded-3xl relative">
    <div class="relative px-20 pt-20 pb-16 w-full rounded-[24px] bg-gradient-to-l from-[#F6F2EE] to-[#F3EFEC] max-md:p-10 max-sm:p-5 max-sm:rounded-[24px]">
      <header class="mb-16">
        <span class="inline-block px-10 py-1.5 mb-10 text-base leading-6 text-white bg-purple-900 rounded-[50px] max-sm:px-5 max-sm:py-1 max-sm:text-sm">
          {heading}
        </span>
        <h1 class="text-5xl font-medium leading-[72px] text-neutral-800 max-md:text-4xl max-md:leading-[56px] max-sm:text-3xl max-sm:leading-10">
          {headingTwo_Part_1}<br>{headingTwo_Part_2}
        </h1>
      </header>

      <div class="flex flex-col gap-12">
        <figure class="p-4 w-full bg-white rounded-3xl shadow-[0_10px_40px_rgba(0,0,0,0.05)]">
          <Image
            src={image}
            alt={imageAlt}
            width={1200}
            height={675}
            class="object-cover w-full h-auto rounded-3xl"
            quality={80}
          />
        </figure>

        <div class="flex gap-6 mt-12 max-md:flex-col">
          {steps.map((step, index) => (
            <article class="flex-1 p-6 bg-white rounded-3xl shadow-[0_10px_40px_rgba(0,0,0,0.05)] max-sm:p-5">
              <div class="flex items-center justify-center mb-4 w-10 h-10 text-base font-bold text-white rounded-full bg-neutral-800 max-sm:w-8 max-sm:h-8 max-sm:text-sm">
                0{index + 1}
              </div>
              <h2 class="mb-4 text-base font-bold leading-6 text-neutral-800 max-sm:text-base">
                {step.title}
              </h2>
              <p class="text-base leading-6 text-neutral-800 max-sm:text-sm">
                {step.description}
              </p>
            </article>
          ))}
        </div>
      </div>
    </div>
</section>