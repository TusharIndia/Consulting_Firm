---
import { Image } from 'astro:assets';
const { headingOne_Part_1, headingOne_Part_2, headingTwo, textOne, buttonOne, buttonOneLink, buttonTwo_Part_1, buttonTwo_Part_2, buttonTwo_Number  } = Astro.props.Content;
---

<section id="about" class="about-us-section my-20">
    <div class="flex gap-16 py-0 mx-auto my-0 max-w-[1320px] max-[900px]:flex-col max-[900px]:gap-8 max-[900px]:px-6 
            max-md:gap-6 max-md:px-5 max-sm:gap-4 max-sm:px-4 max-[480px]:gap-3 max-[480px]:px-3 max-[400px]:px-2
            sm:py-4 md:py-0 max-[900px]:items-center">
      <div class="rounded-3xl h-[528px] w-[706px] max-[900px]:w-full max-[900px]:h-[300px] max-[900px]:rounded-2xl
                  max-[820px]:mx-auto max-[820px]:max-w-[600px]
                  max-md:h-[280px] max-sm:h-[240px] max-[600px]:h-[220px] max-[480px]:h-[200px] max-[400px]:h-[180px] max-[400px]:rounded-xl overflow-hidden">
        <Image 
          src="/imgs/about_us.png" 
          alt="About us" 
          width={706} 
          height={528} 
          class="w-full h-full object-cover object-center"
        />
      </div>
      <article class="flex flex-col gap-8 pt-0.5 max-w-[552px] max-[900px]:max-w-full max-[900px]:gap-6
                     max-md:gap-5 max-sm:gap-4 max-[600px]:gap-3 max-[480px]:gap-2">
        <header class="flex flex-col gap-6 max-[900px]:gap-4 max-[600px]:gap-3 max-[480px]:gap-2">
          <h2 class="text-xl font-medium text-neutral-800 max-[900px]:text-lg max-[600px]:text-base max-[480px]:text-sm">ABOUT US</h2>
          <h1 class="text-6xl font-medium leading-[80px] max-[900px]:text-4xl max-[900px]:leading-[56px]
                     max-md:text-3xl max-md:leading-[44px] max-sm:text-2xl max-sm:leading-9
                     max-[600px]:text-xl max-[600px]:leading-8 max-[480px]:text-lg max-[480px]:leading-7 max-[400px]:text-base max-[400px]:leading-6">
            <span class="text-neutral-800">{headingOne_Part_1}</span>
            <span class="text-blue-900">{headingOne_Part_2}</span>
            <span class="text-neutral-800">{headingTwo}</span>
          </h1>
        </header>
        <p class="text-xl leading-[32px] opacity-75 text-neutral-800 max-[900px]:text-lg max-[900px]:leading-8
                  max-md:text-base max-md:leading-7 max-sm:text-sm max-sm:leading-6
                  max-[600px]:text-sm max-[600px]:leading-5 max-[480px]:text-xs max-[480px]:leading-5 max-[400px]:text-xs max-[400px]:leading-4">
          {textOne}
        </p>
        <div class="flex flex-col gap-6 max-[900px]:gap-4 max-sm:gap-3 max-[480px]:gap-2 max-[900px]:mt-10">
          <div class="flex gap-4 items-center w-full max-w-[800px] max-[900px]:flex-col max-[900px]:gap-4 max-[900px]:w-full
                      max-md:gap-3 max-[600px]:gap-2 max-[480px]:gap-2">
            <a href={buttonOneLink} class="flex-1 px-6 py-5 text-xl font-bold leading-6 bg-amber-300 cursor-pointer rounded-[50px] text-neutral-800 text-center
                                           max-[900px]:w-full max-[900px]:px-5 max-[900px]:py-4 max-[900px]:text-lg
                                           max-md:px-4 max-md:py-3 max-md:text-base max-sm:px-3 max-sm:py-2.5 max-sm:text-sm
                                           max-[600px]:px-3 max-[600px]:py-2 max-[600px]:text-sm max-[480px]:px-2.5 max-[480px]:py-1.5 max-[480px]:text-xs
                                           max-[400px]:rounded-3xl">
              {buttonOne}
            </a>
            <a href={`tel:${buttonTwo_Number}`} class="flex flex-col flex-1 justify-center items-center px-6 py-3 bg-purple-900 cursor-pointer rounded-[50px]
                                                       max-[900px]:w-full max-[900px]:px-5 max-[900px]:py-2.5
                                                       max-md:px-4 max-md:py-2 max-sm:px-3 max-sm:py-1.5 
                                                       max-[600px]:px-3 max-[600px]:py-1 max-[480px]:px-2.5 max-[400px]:rounded-3xl">
              <span class="mb-1 text-sm text-white max-[600px]:text-xs max-[600px]:mb-0.5 max-[480px]:text-xs max-[480px]:mb-0 max-[400px]:text-[10px]">{buttonTwo_Part_1}</span>
              <span class="text-base font-bold leading-6 text-white max-[600px]:text-sm max-[600px]:leading-4 max-[480px]:text-xs max-[480px]:leading-3 max-[400px]:text-[10px] max-[400px]:leading-3">
                {buttonTwo_Part_2}
              </span>
            </a>
          </div>
        </div>
      </article>
    </div>
</section>