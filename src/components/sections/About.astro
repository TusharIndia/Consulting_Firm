---
import { Image } from 'astro:assets';
const { headingOne_Part_1, headingOne_Part_2, headingTwo, textOne, buttonOne, buttonOneLink, buttonTwo_Part_1, buttonTwo_Part_2, buttonTwo_Number  } = Astro.props.Content;
---

<section id="about" class="about-us-section my-20">
    <div class="flex gap-16 py-0 mx-auto my-0 max-w-[1320px] max-md:flex-col max-md:gap-10 max-md:px-8 max-md:py-0 max-sm:gap-8 max-sm:px-5 max-sm:py-0
            max-[820px]:gap-12 max-[820px]:px-6 max-[800px]:flex-col max-[800px]:gap-6 max-[800px]:px-4 max-[600px]:gap-4 max-[600px]:px-3
            max-[480px]:gap-3 max-[480px]:px-2 max-[400px]:px-1
            sm:py-4 md:py-0">
      <div class="rounded-3xl bg-gray-200 h-[528px] w-[706px] max-md:w-full max-md:h-[400px] max-sm:h-[300px]
                  max-[820px]:h-[450px] max-[820px]:w-[500px] max-[800px]:w-full max-[800px]:h-[280px]
                  max-[600px]:h-[240px] max-[480px]:h-[200px] max-[480px]:rounded-2xl max-[400px]:h-[180px] max-[400px]:rounded-xl">
        <Image 
          src="/imgs/about_us.png" 
          alt="About us" 
          width={706} 
          height={528} 
          class="w-full h-full object-cover object-center"
        />
      </div>
      <article class="flex flex-col gap-8 pt-0.5 max-w-[552px] max-md:max-w-full
                     max-[820px]:max-w-[400px] max-[800px]:max-w-full max-[800px]:gap-5 max-[600px]:gap-4 max-[480px]:gap-3">
        <header class="flex flex-col gap-4 max-[800px]:gap-3 max-[600px]:gap-2 max-[480px]:gap-1.5">
          <h2 class="text-lg font-medium text-neutral-800 max-[800px]:text-base max-[600px]:text-sm max-[480px]:text-xs">ABOUT US</h2>
          <h1 class="text-5xl font-medium leading-[72px] max-md:text-4xl max-md:leading-[56px] max-sm:text-3xl max-sm:leading-10
                     max-[820px]:text-4xl max-[820px]:leading-[60px] max-[800px]:text-3xl max-[800px]:leading-[48px]
                     max-[600px]:text-2xl max-[600px]:leading-8 max-[480px]:text-xl max-[480px]:leading-7 max-[400px]:text-lg max-[400px]:leading-6">
            <span class="text-neutral-800">{headingOne_Part_1}</span>
            <span class="text-blue-900">{headingOne_Part_2}</span>
            <span class="text-neutral-800">{headingTwo}</span>
          </h1>
        </header>
        <p class="text-lg leading-9 opacity-75 text-neutral-800 max-sm:text-base max-sm:leading-7
                  max-[820px]:text-base max-[820px]:leading-8 max-[800px]:text-sm max-[800px]:leading-6
                  max-[600px]:text-xs max-[600px]:leading-5 max-[480px]:text-xs max-[480px]:leading-4 max-[400px]:text-[10px] max-[400px]:leading-4">
          {textOne}
        </p>
        <div class="flex flex-col gap-4 max-sm:gap-3 max-[800px]:gap-3 max-[600px]:gap-2 max-[480px]:gap-1.5">
          <div class="flex gap-3 items-center w-full max-w-[800px] max-md:max-w-[600px] max-sm:flex-col max-sm:gap-4 max-sm:w-full
                      max-[820px]:max-w-[500px] max-[800px]:flex-col max-[800px]:gap-3 max-[800px]:w-full
                      max-[600px]:gap-2 max-[480px]:gap-1.5">
            <a href={buttonOneLink} class="flex-1 px-5 py-4 text-lg font-bold leading-6 bg-amber-300 cursor-pointer rounded-[50px] text-neutral-800 max-sm:w-full text-center
                                           max-[820px]:px-4 max-[820px]:py-3 max-[820px]:text-base max-[800px]:w-full
                                           max-[600px]:px-3 max-[600px]:py-2.5 max-[600px]:text-sm max-[480px]:px-2.5 max-[480px]:py-2 max-[480px]:text-xs
                                           max-[400px]:px-2 max-[400px]:py-1.5 max-[400px]:text-[10px] max-[400px]:rounded-3xl">
              {buttonOne}
            </a>
            <a href={`tel:${buttonTwo_Number}`} class="flex flex-col flex-1 justify-center items-center px-5 py-2 bg-purple-900 cursor-pointer rounded-[50px] max-sm:w-full
                                                       max-[820px]:px-4 max-[800px]:w-full
                                                       max-[600px]:px-3 max-[600px]:py-1.5 max-[480px]:px-2.5 max-[480px]:py-1 
                                                       max-[400px]:px-2 max-[400px]:py-0.5 max-[400px]:rounded-3xl">
              <span class="mb-1 text-xs text-white max-[600px]:text-[10px] max-[600px]:mb-0.5 max-[480px]:text-[9px] max-[480px]:mb-0 max-[400px]:text-[8px]">{buttonTwo_Part_1}</span>
              <span class="text-xs font-bold leading-6 text-white max-[600px]:text-[10px] max-[600px]:leading-4 max-[480px]:text-[9px] max-[480px]:leading-3 max-[400px]:text-[8px] max-[400px]:leading-3">
                {buttonTwo_Part_2}
              </span>
            </a>
          </div>
        </div>
      </article>
    </div>
</section>