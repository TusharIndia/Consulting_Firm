---
import VideoModal from "../VideoModal.astro"

const { Content } = Astro.props;
const { heading, headingColored, description, image, imageAlt } = Content;
---

<section class="mx-auto my-20 max-w-[1320px] max-md:my-10 max-md:rounded-3xl relative px-4 sm:px-5 md:px-6 lg:px-0">
    <div class="flex flex-col rounded-none">
        <h2 class="z-10 self-center -mt-4 text-5xl font-medium text-center leading-[72px] text-neutral-800 w-[897px] max-md:max-w-full max-md:text-4xl max-md:leading-[64px]">
            {heading}
            <span style="color: rgba(94, 129, 233, 1)">{headingColored}</span>
        </h2>

        <article class="p-7 mt-12 w-full bg-indigo-500 rounded-3xl max-md:px-5 max-md:mt-10 max-md:max-w-full">
            <div class="flex gap-5 max-md:flex-col">
            <div class="w-3/5 max-md:ml-0 max-md:w-full">
                <p class="self-stretch my-auto text-2xl leading-10 text-white max-md:mt-10 max-md:max-w-full">
                {description}
                </p>
            </div>
            <div class="ml-5 w-2/5 max-md:ml-0 max-md:w-full">
                <img
                src={image}
                alt={imageAlt}
                class="object-contain grow w-full rounded-none aspect-[1.47] max-md:mt-10 max-md:max-w-full"
                />
            </div>
            </div>
        </article>
    </div>
</section>

<style>
@media (min-width: 768px) and (max-width: 820px) {
  section {
    margin-left: 20px;
    margin-right: 20px;
    width: calc(100% - 40px);
  }
  
  h2 {
    width: 100%;
    font-size: 2.5rem;
    line-height: 3rem;
  }
}

@media (max-width: 767px) {
  section {
    margin-left: 16px;
    margin-right: 16px;
    width: calc(100% - 32px);
  }
}
</style>
