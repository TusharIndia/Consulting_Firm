---
import VideoModal from "../VideoModal.astro"
import { Image } from 'astro:assets';

const { Content } = Astro.props;
const { heading, headingColored, description, image, imageAlt } = Content;
---

<section class="mx-auto my-20 max-w-[1320px] relative px-4 sm:px-5 md:px-6 lg:px-0 max-[900px]:my-8 max-[900px]:mx-4 max-[900px]:px-0">
    <div class="flex flex-col rounded-none">
        <h2 class="z-10 self-center -mt-4 text-5xl font-medium text-center leading-[72px] text-neutral-800 w-[897px] max-[900px]:w-full max-[900px]:text-3xl max-[900px]:leading-[48px] max-[900px]:px-4 max-[768px]:text-2xl max-[768px]:leading-[40px] max-[480px]:text-xl max-[480px]:leading-[32px]">
            {heading}
            <span style="color: rgba(94, 129, 233, 1)">{headingColored}</span>
        </h2>

        <article class="p-7 mt-12 w-full bg-indigo-500 rounded-3xl max-[900px]:p-5 max-[900px]:mt-8 max-[768px]:p-4 max-[768px]:mt-6 max-[480px]:p-3 max-[480px]:mt-4">
            <div class="flex gap-5 max-[900px]:flex-col max-[900px]:gap-6">
            <div class="w-3/5 max-[900px]:w-full">
                <p class="self-stretch my-auto text-2xl leading-10 text-white max-[900px]:text-xl max-[900px]:leading-8 max-[768px]:text-lg max-[768px]:leading-7 max-[480px]:text-base max-[480px]:leading-6">
                {description}
                </p>
            </div>
            <div class="ml-5 w-2/5 max-[900px]:ml-0 max-[900px]:w-full max-[900px]:flex max-[900px]:justify-center">
                <Image
                src={image}
                alt={imageAlt}
                class="object-contain grow w-full rounded-none aspect-[1.47] max-[900px]:aspect-[1.6] max-[768px]:aspect-[1.5] max-[480px]:aspect-[1.3] max-[900px]:max-w-md"
                width={588}
                height={400}
                quality={90}
                loading="lazy"
                />
            </div>
            </div>
        </article>
    </div>
</section>

<style>
@media (min-width: 900px) and (max-width: 1024px) {
  section {
    margin-left: 20px;
    margin-right: 20px;
    width: calc(100% - 40px);
  }
  
  h2 {
    width: 100%;
    font-size: 2.5rem;
    line-height: 3rem;
  }
}

@media (max-width: 899px) {
  section {
    margin-left: 12px !important;
    margin-right: 12px !important;
    width: calc(100% - 24px) !important;
  }
}

@media (max-width: 480px) {
  section {
    margin-left: 8px !important;
    margin-right: 8px !important;
    width: calc(100% - 16px) !important;
  }
}
</style>
