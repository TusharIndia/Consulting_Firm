---
// Accept the blog post as a prop
import { Image } from 'astro:assets';
const { post } = Astro.props;
---

<article class="flex overflow-hidden flex-col items-start px-20 pb-32 bg-white max-md:px-5 max-md:py-24">
  <main class="z-10 pl-7 mt-20 text-neutral-800 max-md:pl-5 max-md:max-w-full">
    <!-- Display the featured image from the blog post -->
    {post.featuredImg && (
      <Image
        src={post.featuredImg}
        alt={post.title}
        class="object-contain mr-7 w-full rounded-3xl aspect-[1.82] max-w-[1105px] max-md:mr-2.5 max-md:max-w-full"
        width={1105}
        height={607}
        format="webp"
        loading="eager"
      />
    )}

    <!-- Blog title and description -->
    <h1 class="mt-8 text-4xl font-bold">{post.title}</h1>
    
    <!-- Blog metadata -->
    <div class="flex items-center mt-4 text-sm text-gray-600">
      {post.date && <span class="mr-4">{new Date(post.date).toLocaleDateString()}</span>}
      {post.readingTime && <span class="mr-4">• {post.readingTime}</span>}
      {post.author && <span>• By {post.author}</span>}
    </div>

    <!-- Blog description/excerpt -->
    <p class="mt-7 text-lg leading-9 max-md:max-w-full">
      {post.description}
    </p>

    <!-- Blog content using slot -->
    <div class="blog-content">
      <slot />
    </div>

    
    <!-- Tags -->
    {post.tags && post.tags.length > 0 && (
      <div class="mt-10">
        <h3 class="text-lg font-bold">Tags:</h3>
        <div class="flex flex-wrap gap-2 mt-2">
          {post.tags.map((tag) => (
            <span class="px-3 py-1 text-sm bg-gray-100 rounded-full">{tag}</span>
          ))}
        </div>
      </div>
    )}
  </main>
</article>


<style>
  .font-onest {
  }

  
  .blog-content {
    background: transparent;
    line-height: 1.7;
    font-size: 1.25rem; /* 20px */
    margin: 0 auto;
    color: #000000;
    font-family: Onest, sans-serif;
  }

  /* Use :global() to make these styles apply to slotted content */
  .blog-content :global(h1),
  .blog-content :global(h2),
  .blog-content :global(h3),
  .blog-content :global(h4) {
    color: #000000;
    font-family: Onest, sans-serif;
    font-weight: 500;
    line-height: 1.2;
    letter-spacing: -0.5px;
  }

  .blog-content :global(h1) {
    font-size: 2.5rem;
    margin-bottom: 2.5rem;
    letter-spacing: -1px;
  }

  .blog-content :global(h2) {
    font-size: 32px;
    margin-top: 3.5rem;
    letter-spacing: -1.28px;
  }

  .blog-content :global(h3) {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .blog-content :global(h4) {
    font-size: 24px;
    line-height: 33.6px;
    letter-spacing: -0.96px;
    margin-bottom: 2.5rem;
  }

  .blog-content :global(p) {
    color: #333333; /* Light black (dark gray) for paragraphs */
    font-size: 1.25rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    margin-top: 0;
    font-weight: 400;
    font-family: Onest, sans-serif;
  }
  
  .blog-content :global(li) {
    color: #333333; /* Light black (dark gray) for list items */
    font-size: 1.25rem;
    line-height: 1.7;
    margin-bottom: 1rem;
    margin-top: 0;
    font-weight: 400;
    position: relative;
    padding-left: 1.5rem;
    display: flex;
    align-items: flex-start;
    font-family: Onest, sans-serif;
  }

  .blog-content :global(ul) {
    list-style-type: none;
    padding-left: 0.5rem;
    margin-bottom: 2rem;
  }

  .blog-content :global(ul li::before) {
    content: "•";
    color: #C3FC68; /* Lime green bullet color */
    font-weight: bold;
    position: absolute;
    left: 0;
    width: 1.5rem;
    text-align: center;
  }

  .blog-content :global(ol) {
    list-style-type: decimal;
    padding-left: 2rem;
    margin-bottom: 2rem;
  }

  .blog-content :global(ol li) {
    padding-left: 0.5rem;
  }

  div {
    background-color: rgb(255, 255, 255);
  }

  /* Rest of the styles remain unchanged */

</style>