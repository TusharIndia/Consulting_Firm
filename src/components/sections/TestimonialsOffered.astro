---
const { image, heading, headingTwo_Part_1, headingTwo_Part_2, headingTwo_Part_3, buttonText, buttonLink, buttonTwo_Part_1, buttonTwo_Part_2, buttonTwo_Number, list } = Astro.props.Content;
---

<section id="treatment" class="testimonials-offered mx-auto my-10 max-w-[1320px] px-4 md:px-6 lg:px-0 max-md:my-10 relative">
  <div class="flex flex-col md:flex-row gap-10 justify-between items-center w-full">
    <img
      src={image}
      alt="Clear Path treatments illustration"
      class="object-contain self-stretch my-auto rounded-3xl w-full md:w-[300px] lg:w-[706px] aspect-[1.57]"
    />
    <article class="self-stretch my-auto w-full md:flex-1 lg:flex-none lg:w-[552px]">
      <header class="w-full font-medium text-neutral-800">
        <h2 class="text-lg">
          {heading}
        </h2>
        <h3 class="mt-4 text-4xl md:text-5xl leading-[56px] md:leading-[72px]">
          {headingTwo_Part_1}
          <span style="color: rgba(10, 39, 126, 1)">
            {headingTwo_Part_2}
          </span>
          {headingTwo_Part_3}
        </h3>
      </header>
      <div class="flex flex-col sm:flex-row gap-3 mt-8 w-full flex-wrap"> 
       
        <a href={buttonLink} class="flex flex-1 justify-center items-center px-5 py-4 text-lg font-semibold leading-none bg-amber-300 rounded-[50px] text-neutral-800 w-full sm:w-auto md:min-w-0 md:flex-grow">
          <span>{buttonText}</span>
        </a>
        <a href={`tel:${buttonTwo_Number}`}
          class="flex-1 justify-center items-center px-5 py-4 my-auto text-white bg-purple-900 rounded-[50px] w-full sm:w-auto md:min-w-0 md:flex-grow" 
          aria-label="Call for questions"
        >
          <div class="flex flex-col items-center">
            <span class="text-xs">
              {buttonTwo_Part_1}
            </span>
            <span class="text-xs font-semibold leading-6">
              {buttonTwo_Part_2}
            </span>
          </div>
        </a>
      </div>
    </article>
  </div>

  <div class="flex flex-col md:flex-row gap-6 items-stretch mt-12 w-full max-md:mt-10">
    {list.map((item) => (
      <a href={item.link || '#'} class="flex-1" style="text-decoration: none; color: inherit;">
        <article class="flex flex-col flex-1 gap-2.5 items-start px-6 pt-6 pb-12 bg-white rounded-3xl shadow-[0px_10px_40px_rgba(0,0,0,0.05)] w-full md:w-auto h-full transition-all hover:shadow-lg">
          <div class="flex-1 w-full">
            <header class="w-full">
              <div class="flex overflow-hidden flex-col items-start w-full rounded-[100px]">
                <img
                  src={item.image}
                  alt={`${item.title} icon`}
                  class="object-contain w-10 aspect-square"
                />
              </div>
              <h3 class="mt-4 text-base font-bold text-neutral-800">
                {item.title}
              </h3>
            </header>
            <p class="mt-4 text-base leading-6 text-neutral-800">
              {item.description}
            </p>
          </div>
          <img
            src="/imgs/learn_more_indicator.svg"
            alt="Learn more indicator"
            class="object-contain mt-4 w-6 aspect-square self-start"
          />
        </article>
      </a>
    ))}
  </div>
</section>