---

const { Name, Designation, Image } = Astro.props;
---

<li class="bg-gray-300  rounded-xl">
    <!-- Image Placeholder (optional, based on your needs) -->
    <div class="w-full h-auto bg-gray-200 flex items-center justify-center rounded-xl">
      <img src={Image} class=" rounded-xl " alt="" />
    </div>
  
    <!-- Text Content -->
    <div class="mt-8 flex-col text-start pl-6 ">
      <h3 class="text-xl font-semibold text-black">{Name}</h3>
      <p class="text-xs font-normal text-gray-800 uppercase">{Designation}</p>
    </div>
  
  </li>
