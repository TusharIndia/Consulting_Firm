---
// BlogCard.astro

interface Props {
  title: string;
  date: string;
  readTime: string;
  description: string;
  featuredImg: string;
  link: string;
}

const { title, readTime, description, featuredImg, link, date } = Astro.props as Props;

---

<div class="blog-card bg-gray-100 rounded-md overflow-hidden ">
  <img src={featuredImg} alt={title} class="object-cover rounded-md w-full h-60" />
  <div class="py-4  items-start">
    <div class="flex items-start text-xs text-gray-600 mb-1">
      <span class="category bg-gray-200 rounded-lg px-2 py-1 text-xs"
        >{date}</span
      >
      <span class="ml-2 mt-1">{readTime}</span>
    </div>
    <h3 class="text-lg font-semibold text-black mb-4 text-left">{title}</h3>
    <p class="text-sm text-gray-700 text-left">
      {description}
    </p>
    <div
    class="text-sm font-semibold text-primary-500 hover:underline text-left"
    
    >
      <a href={link}>
        READ MORE <span>â†’</span>
      </a>
    </div>
  </div>
</div>
