---
import Button from "./Button.astro";

const { Name, Designation, Image, buttonText } = Astro.props;
---

<li>
  <img src={Image} class="rounded-xl" alt="" />
  <div class="mt-4 flex items-center flex-col justify-center">
    <h3 class="text-xl text-black font-bold">{Name}</h3>
    <p class="text-primary text-sm font-light">{Designation}</p>

    {
      buttonText && (
        <Button
          buttonText={buttonText}
          buttonLink="#"
          buttonClass="secondary-button"
        />
      )
    }
  </div>
</li>
