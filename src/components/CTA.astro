---
import Button from "./Button.astro";

const { heading, text, buttonText, image, altText, phoneText, phoneNumber } = Astro.props.Content;
---

<section
  class="mx-auto my-20 max-w-[1320px] px-4 sm:px-6 md:px-8 max-md:my-10 max-md:rounded-3xl relative"
>
  <div
    class="flex relative justify-between px-5 sm:px-10 md:px-16 lg:px-20 pt-9 pb-14 mb-20 w-full bg-indigo-500 rounded-3xl h-auto md:h-auto lg:h-[513px] max-w-[1320px] max-md:flex-col max-md:p-8 max-sm:p-5"
  >
    <div class="flex flex-col gap-10 max-w-[552px] md:max-w-[45%] lg:max-w-[552px] max-md:max-w-full">
      <div class="flex flex-col gap-4">
        <h1
          class="text-5xl font-medium text-white leading-[72px] max-md:text-4xl max-md:leading-[56px] max-sm:text-3xl max-sm:leading-10"
        >
          {heading}
        </h1>
        <p class="text-lg leading-9 text-white text-opacity-80">
          {text}
        </p>
      </div>
      <div class="flex gap-3 items-center max-sm:flex-col max-sm:w-full">
        <a href="/contact"
          class="flex-1 px-5 py-4 text-lg font-semibold text-center bg-amber-300 cursor-pointer rounded-[50px] text-neutral-800 max-sm:w-full"
        >
          {buttonText}
      </a>
        <button
          class="flex flex-col flex-1 shrink justify-center items-center px-5 py-4 my-auto text-white bg-purple-900 basis-0 min-w-0 md:min-w-[180px] lg:min-w-60 rounded-[50px]"
          aria-label="Call for questions"
        >
          <div class="flex flex-col items-center">
            <span class="text-xs"> {phoneText} </span>
            <span class="text-xs font-semibold leading-6">
              Call {phoneNumber}
            </span>
          </div>
        </button>
      </div>
    </div>
    <img
      src={image}
      class="rounded-3xl h-auto md:h-[320px] lg:h-[407px] opacity-[0.9942] w-full md:w-[45%] lg:w-[548px] max-md:mt-8 object-cover"
      alt={altText}
    />
  </div>
</section>